<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Electricity.newElectricity.ElectricFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".Electricity.ElecticityActivity">

        <ImageButton
            android:visibility="gone"
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_backbutton" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Electricity Bill Pay"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Account Id"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/account_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background"
            android:ems="10"
            android:hint="Enter Account Id"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14dp"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Service Provider"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background">

            <Spinner
                android:id="@+id/Elecrtcity_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:dropDownVerticalOffset="60dp"
                android:paddingLeft="5dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:spinnerMode="dropdown"
                android:fontFamily="@font/nexa_light"
                android:textStyle="bold"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cusInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Customer Information:"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Name"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Cell number:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="cell no"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Bill amount:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cBillAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="bill"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Net bill amount:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cNetBillAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="net bill"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Due date:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cDue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="due"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_noInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/errorMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*Enter a valid Service provider and account number"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fetchinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexa_bold"
            android:background="@color/appPrimaryColor"
            android:text="Fetch  detail"
            android:textColor="@color/appBackground" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fetchbill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexa_bold"
            android:background="@color/appPrimaryColor"
            android:text="Proceed"
            android:textColor="@color/appBackground" />

    </LinearLayout>

</ScrollView>