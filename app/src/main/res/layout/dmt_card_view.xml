<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    app:cardBackgroundColor="#FAFAFA"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="16dp"
        android:background="@drawable/shadow">


        <TextView
            android:id="@+id/txt_beneficiary_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20sp"
            android:layout_weight="1"
            android:fontFamily="@font/nexa_light"
            android:text="Beneficiary ID"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_blue"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_acct_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_beneficiary_id"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Account Numbers"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_acct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_acct_no"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Account Name"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_ifsc_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_acct_name"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="IFSC Code"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_ifsc_code"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Status"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btn_make_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_status"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:gravity="center"
            android:text="PAY"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_make_payment"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:gravity="center"
            android:text="Verify"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_verify"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/appSecondaryVariantColor"
            android:fontFamily="@font/nexa_light"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/white"
            android:textStyle="bold" />


        <!--            android:background="@color/green"-->

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
