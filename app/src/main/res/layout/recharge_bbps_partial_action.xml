<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:id="@+id/linear_DTH"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
            android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dth_new"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonDTH"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageButton"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="DTH"
            android:textColor="@color/black"


            android:layout_gravity="center"

            android:layout_marginTop="8dp"/>
    </LinearLayout>

        <LinearLayout
        android:id="@+id/linear_Recharge"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/recharge_new"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonRecharge"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Recharge"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_EMI"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/emi_new_logo"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                android:id="@+id/imageButtonEmi"
                android:layout_gravity="center"
                app:layout_constraintStart_toEndOf="@+id/imageButton"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="EMI"
                android:fontFamily="@font/nexa_light"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">


    <LinearLayout
        android:id="@+id/linear_LandLine"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:paddingTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/landline_new"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonLandLine"
            android:layout_gravity="center"/>
<!--        android:background="@drawable/background_oval8"-->
        <TextView
            android:id="@+id/landline_txt"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Landline"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_Electricity"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="80dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/electricity_new2"
            android:background="@color/zxing_transparent"
            android:id="@+id/imageButtonElectricity"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageButton"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Electricity"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_Water"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/water_new"
            android:scaleType="fitXY"
            android:background="@color/zxing_transparent"
            android:id="@+id/imageButtonWater"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_water"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Water"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

    <LinearLayout
        android:id="@+id/linear_Insurance"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/insurance_new"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonInsurance"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageButton"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Insurance"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear_gas"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/gasnew"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonGas"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_gas"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:text="GAS"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_traffic"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:paddingTop="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/traffic_new_logo"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                android:id="@+id/imageButtontraffic"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_gas"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Traffic"
                android:fontFamily="@font/nexa_light"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        >

        <LinearLayout
            android:id="@+id/linear_municipal"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/municipality_logo_new"
                android:background="@color/zxing_transparent"
                android:scaleType="fitXY"
                android:id="@+id/imageButtonmunicipal"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_gas"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Municipality"
                android:fontFamily="@font/nexa_light"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/gas_bill"
                android:background="@drawable/background_oval8"
                android:layout_gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Municipality"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/gas_bill"
                android:background="@drawable/background_oval8"
                android:layout_gravity="center"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Municipality"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>