<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/background"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_authorImage"
            android:layout_width="100dp"
            android:layout_height="100sp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:src="@drawable/logo"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_height="wrap_content"
            android:layout_width="180sp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="10dp"
            android:background="@drawable/shadow"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay4.MaterialCardView.Cut"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/appPrimaryColor"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="10sp"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_racharge_service"
                android:layout_height="wrap_content"
                android:layout_width="300sp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/shadow"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    android:background="#00000000"
                    android:drawableStart="@drawable/ic_email"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:drawableLeft="@drawable/ic_email" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_racharge_service2"
                android:layout_height="wrap_content"
                android:layout_width="300sp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="10dp"
                android:layout_marginTop="2sp"
                android:layout_marginRight="10sp"
                android:layout_weight="1"
                android:background="@drawable/shadow"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay2.MaterialCardView.Cut"
                android:foreground="?attr/selectableItemBackground">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="text"
                    android:textSize="15dp"
                    android:paddingStart="5dp"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_pass"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:textColorHint="@color/black"
                    android:background="#00000000"
                    android:drawableLeft="@drawable/ic_pass" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/login"
                android:layout_height="60sp"
                android:layout_width="300sp"
                app:cardBackgroundColor="@color/appPrimaryColor"
                app:cardElevation="10dp"
                android:layout_weight="1"
                android:layout_marginTop="2sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/shadow"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay3.MaterialCardView.Cut"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIGN IN"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/background2"/>

    <TextView
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/blue"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>




</LinearLayout>