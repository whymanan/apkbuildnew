<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/appBackground"
    tools:context=".Aeps2.AddNewAdharPayment2">


    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_backbutton"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/appBackground"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                android:padding="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/aeps" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Add New Adhar Payments"
                    android:textColor="@color/appSecondaryColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="User Information:"
                    android:textColor="@color/appPrimaryColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Transaction Types"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textColor="@color/appPrimaryColor"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_background">

                    <Spinner
                        android:id="@+id/tras_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:dropDownVerticalOffset="60dp"
                        android:paddingLeft="5dp"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:spinnerMode="dropdown" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Aadhar Number"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textColor="@color/appPrimaryColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/adharno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_background"
                    android:ems="10"
                    android:hint="xxxx-xxxx-xxxx"
                    android:inputType="number"
                    android:maxLength="12"
                    android:paddingLeft="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="OR"
                    android:textColor="@color/black"
                    android:textSize="14sp" />


                <LinearLayout
                    android:id="@+id/scan_linear"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/linearback"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90sp"
                        android:layout_height="match_parent"
                        android:background="@color/appPrimaryColor"
                        android:gravity="center"
                        android:text="Scan"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/plusbackg"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:background="@color/appSecondaryColor"
                            android:gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/scan" />
                    </LinearLayout>
                </LinearLayout>

                <!--                <Button-->
                <!--                    android:id="@+id/scan"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_marginTop="10dp"-->
                <!--                    android:layout_marginBottom="10dp"-->
                <!--                    android:background="@color/appPrimaryColor"-->
                <!--                    android:text="Scan"-->
                <!--                    android:textColor="@color/white"/>-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Mobile Number"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textColor="@color/appPrimaryColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mobno"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_background"
                    android:ems="10"
                    android:hint="Enter Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/txtamt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Amount"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textColor="@color/appPrimaryColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/spinner_background"
                    android:ems="10"
                    android:hint="Enter Amount"
                    android:inputType="number"
                    android:paddingLeft="12dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp" />


                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/appPrimaryColor"
                    android:text="Submit"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>