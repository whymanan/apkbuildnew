<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KYCDetails.KYCDetailsActivity">

      <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="BISENESS INFORMATON"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Adhar Number"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="xxxx-xxxx-xxxx"
        android:paddingLeft="12dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/name_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:paddingLeft="12dp"
        android:visibility="gone"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pan Number"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/mobno_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="xxxxx-xxxx-x"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/mobile_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:visibility="gone"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/txtamt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Shop Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="Enter shop name"
        android:paddingLeft="12dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/email_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:paddingLeft="12dp"
        android:visibility="gone"
        android:textSize="14dp" />

            <TextView
                android:id="@+id/txtgst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="GST Number"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/gst_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:ems="10"
                android:hint="xxxxx-xxxx-x"
                android:paddingLeft="12dp"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/gst_txt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:ems="10"
                android:visibility="gone"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:textSize="14dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="BANK ACCOUNT DETAILS"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Account Holder Name"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/bankname_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="Enter holder name"
        android:paddingLeft="12dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/bankname_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:textColor="@color/black"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bank Name"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/branch_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="Enter Bank name"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/branch_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:visibility="gone"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Account Number"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/acco_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="Enter Account Number"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/account_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:visibility="gone"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="IFSC Code"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ifsc_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:hint="Enter IFSC Code"
        android:paddingLeft="12dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/ifsc_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:ems="10"
        android:visibility="gone"
        android:paddingLeft="12dp"
        android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="UPLOAD DOCUMENTS"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Profile"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/choosefiles"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:ems="10"
                android:paddingTop="10dp"
                android:text="Choose files"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adhar Front"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/choosefiles2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:ems="10"
                android:text="Choose files"
                android:paddingLeft="12dp"
                android:paddingTop="10dp"
                android:textSize="14dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Adhar Back"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/choosefiles3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinner_background"
                android:ems="10"
                android:text="Choose files"
                android:paddingTop="10dp"
                android:paddingLeft="12dp"
                android:textSize="14dp" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark1"
        android:text="SAVE"
        android:textColor="@color/white" />

</LinearLayout>

    </RelativeLayout>
    </ScrollView>

</LinearLayout>