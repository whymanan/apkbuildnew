<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DTH.newDTH.DthFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".DTH.DthRechargActivity">

        <ImageButton
            android:visibility="gone"
            android:id="@+id/backbutton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_backbutton" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="DTH Recharge"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_bold"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Service Provider"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background">

            <Spinner
                android:id="@+id/DTH_Provider_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:dropDownVerticalOffset="60dp"
                android:paddingLeft="5dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Customer No/Account No"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/GAS_accountid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background"
            android:ems="10"
            android:hint="Account No"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_cusInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Customer Information:"
            android:textColor="@color/appPrimaryColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Name"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Balance:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="balance"
                    android:textSize="18sp"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Plan:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="plan"
                    android:textSize="18sp"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Next recharge date:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cRechargeDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="00-00-00"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Monthly recharge:"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cMonthly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="1234"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_bold"
                    android:textSize="18sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_noInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/errorMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="*Enter a valid Service provider and account number"
                    android:textColor="@color/appPrimaryVariantColor"
                    android:fontFamily="@font/nexa_light"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Amount"
            android:textColor="@color/appPrimaryVariantColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/Dth_accountid"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/spinner_background"
            android:ems="10"
            android:hint="Enter Amount"
            android:paddingLeft="12dp"
            android:textColor="@color/appPrimaryVariantColor"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColorHint="@color/black"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fetchinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nexa_bold"
            android:background="@color/appPrimaryColor"
            android:text="Fetch  detail"
            android:textColor="@color/appBackground" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Save_DTHbutton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/nexa_bold"
            android:background="@color/appPrimaryColor"
            android:text="Proceed"
            android:textColor="@color/appBackground" />

    </LinearLayout>

</ScrollView>