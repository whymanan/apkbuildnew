<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_Aeps"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/sbmbank"
            android:layout_gravity="center"
            android:background="@drawable/background_oval"
            android:id="@+id/imageButtonAeps"/>
       

        <TextView
            android:id="@+id/aeps"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="SBM Aeps"
            android:fontFamily="@font/nexa_light"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_aeps2"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/icici"
            android:scaleType="fitXY"
            android:background="@color/zxing_transparent"
            android:id="@+id/imageButtonaeps2"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@+id/imageButton"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="ICICI Aeps"
            android:fontFamily="@font/nexa_light"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_aeps3"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="68dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/fino_logo_new"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonAeps3"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Fino Aeps"
            android:textStyle="bold"
            android:fontFamily="@font/nexa_light"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">


    <LinearLayout
        android:id="@+id/linear_micro"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/microatm_logo_new"
            android:background="@color/zxing_transparent"
            android:scaleType="fitXY"
            android:id="@+id/imageButtonMicroAtm"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="Micro ATM"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/nexa_light"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_dmt"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/dmtnew"
            android:scaleType="fitXY"
            android:background="@drawable/background_oval5"
            android:id="@+id/imageButtonDMT"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@+id/lin"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="DMT"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/nexa_light"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_adharpay"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:layout_height="60dp"
            android:layout_width="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/adharpaynew"
            android:scaleType="fitXY"
            android:backgroundTint="@color/zxing_transparent"
            android:id="@+id/imageButtonAadharpay"
            android:layout_gravity="center"
            app:layout_constraintStart_toEndOf="@+id/lin"/>
<!--        android:background="@drawable/background_oval6"-->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Aadhar Pay"
            android:textStyle="bold"
            android:fontFamily="@font/nexa_light"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>